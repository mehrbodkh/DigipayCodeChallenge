<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true">
        <shape  >
            <solid android:color="#347E3B"/>
            <corners
                    android:radius="25dp"/>
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <solid android:color="#578A5E"/>
            <corners
                    android:radius="25dp"/>
        </shape>
    </item>

    <item android:state_focused="false" >
        <shape>
            <solid android:color="#578A5E"/>
            <corners
                    android:radius="25dp"/>
        </shape>
    </item>

    <item android:state_pressed="false" >
        <shape>
            <solid android:color="#347E3B"/>
            <corners
                    android:radius="25dp"
            />
        </shape>
    </item>

</selector>